# =============================================================================
# Reply Guy Bot - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# Never commit .env to version control!

# === X/Twitter (Ghost Delegate) ===
# Dummy account credentials (this account takes the risk)
# Numbered for future multi-account support
DUMMY_USERNAME1=
DUMMY_EMAIL1=
DUMMY_PASSWORD1=

# Main account handle (without @) - publishes via delegation
MAIN_ACCOUNT_HANDLE=

# === AI Provider (OpenAI API Compatible) ===
# Works with: OpenAI, Ollama, LMStudio, Together, Groq, etc.
# For Ollama: AI_BASE_URL=http://localhost:11434/v1, AI_API_KEY=ollama
# For LMStudio: AI_BASE_URL=http://localhost:1234/v1, AI_API_KEY=lm-studio
AI_API_KEY=sk-xxx
AI_BASE_URL=https://api.openai.com/v1
AI_MODEL=gpt-4o-mini

# === Telegram ===
# Get token from @BotFather, chat_id from @userinfobot
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# === Supabase ===
# Get these from your Supabase project settings
SUPABASE_URL=https://xxx.supabase.co
SUPABASE_KEY=

# === Burst Mode (Anti-Detection) ===
BURST_MODE_ENABLED=true
QUIET_HOURS_START=0
QUIET_HOURS_END=7
MIN_DELAY_MINUTES=15
MAX_DELAY_MINUTES=120
SCHEDULER_CHECK_INTERVAL=60

# === Security (REQUIRED) ===
# Cookie encryption key - MANDATORY for production
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
COOKIE_ENCRYPTION_KEY=
